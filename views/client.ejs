<!doctype html>
<html lang="en">

    <%- include('header'); -%>

    <h2 class="title">ECS Example Game</h2>

    <div id="game">

        <!-- Error Display -->
        <div v-if="error" class="alert alert-danger">
            <strong>Error: </strong> {{error}}
        </div>

        <!-- Waiting for connection -->
        <div v-if="state.state === false">
            <%- include('loading') -%>
        </div>

        <!-- Waiting for player to join -->
        <div v-else-if="state.state == 0">
            <%- include('join') -%>
        </div>

        <!-- Playing the game -->
        <div v-else-if="state.state == 1">
            <%- include('play') -%>
        </div>

        <!-- Final scores ->
        <div v-else-if="state.state == 2">
            <%- include('scores') -%>
        </div> -->

        <div class="admin">
            <p><strong>Debug information:</strong> My state: {{me.state}} | Game state: {{state.state}}</p>
        </div>

    </div>

    <%- include('footer'); -%>

</html>